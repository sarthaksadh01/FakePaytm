<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header"
        android:src="@drawable/header"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

   <LinearLayout
       android:layout_below="@+id/header"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginLeft="20dp"
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:text="Paid Successfully"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />


       <com.airbnb.lottie.LottieAnimationView

           android:layout_marginLeft="20dp"
           android:id="@+id/lottieAnimationView"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           app:lottie_autoPlay="true"
           app:lottie_fileName="success.json"
           app:lottie_loop="true" />

   </LinearLayout>
    <TextView
        android:id="@+id/amnt"
        android:layout_marginLeft="20dp"
        android:text="\u20B9 1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="xyz Wallet linked to"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="8076911425"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="time and date here"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/trans"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Transaction ID: 2345237093"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView

        android:layout_alignParentBottom="true"
        android:src="@drawable/sarthak"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</RelativeLayout>